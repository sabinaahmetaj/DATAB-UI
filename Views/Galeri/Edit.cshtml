@model PROJEKTDB.Models.Galeri

<h2>Edit Galeri</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="GalId" />

    <div class="mb-3">
        <label asp-for="GalId" class="form-label"></label>
        <input asp-for="GalId" class="form-control" readonly />
    </div>

     <div class="mb-3">
        <label asp-for="GalEm" class="form-label"></label>
        <input asp-for="GalEm" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="GalMng" class="form-label"></label>
        <input asp-for="GalMng" class="form-control" />
        <span asp-validation-for="GalMng" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="GalTel" class="form-label"></label>
        <input asp-for="GalTel" class="form-control" />
        <span asp-validation-for="GalTel" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="GalZon" class="form-label"></label>
        <input asp-for="GalZon" class="form-control" />
        <span asp-validation-for="GalZon" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
