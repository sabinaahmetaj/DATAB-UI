@model IEnumerable<PROJEKTDB.Models.Pikture>

<div class="card-glass p-4 mt-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="page-title mb-0">Pikturat</h1>
        <a asp-action="Create" class="btn btn-primary">
            âž• Shto Pikture
        </a>
    </div>

    <!-- TABLE WRAPPER -->
    <div class="table-responsive">
        <table class="table align-middle table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titulli</th>
                    <th>Cmimi</th>
                    <th>Artisti</th>
                    <th>Galeria</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PikId</td>
                    <td>@item.PikTit</td>
                    <td><strong>@item.PikCmim</strong></td>

                    <td>
                        @(item.Person != null
                            ? (item.Person.PerEm + " " + item.Person.PerMb)
                            : item.PerId)
                    </td>

                    <td>
                        @(item.Galeri != null
                            ? item.Galeri.GalId
                            : item.GalId)
                    </td>

                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-info"
                           asp-action="Details"
                           asp-route-id="@item.PikId">
                            Details
                        </a>

                        <a class="btn btn-sm btn-outline-warning ms-1"
                           asp-action="Edit"
                           asp-route-id="@item.PikId">
                            Edit
                        </a>

                        <form asp-action="Delete"
                              asp-route-id="@item.PikId"
                              method="post"
                              class="d-inline ms-1">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('A je i sigurt qe do ta fshish kete pikture?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
